{% extends 'base.html.twig' %}

{% block title %}Evento{% endblock %}

{% block body %}
    <h1>Evento</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Titulo</th>
                <td>{{ evento.titulo }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ evento.descripcion }}</td>
            </tr>
            <tr>
                <th>Dia</th>
                <td>{{ evento.dia ? evento.dia|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Periodicidad</th>
                <td>{{ evento.periodicidad ? evento.periodicidad.format('%y year(s), %m month(s), %d day(s)') : '' }}</td>
            </tr>
            <tr>
                <th>Categoria</th>
                <td>{{ evento.categoria ? evento.categoria|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Tipo</th>
                <td>{{ evento.tipo }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_dashboard') }}">Volver</a>

    <a href="{{ path('app_evento_edit', {'id': evento.id}) }}">Editar</a>

    {{ include('evento/_delete_form.html.twig') }}
{% endblock %}
