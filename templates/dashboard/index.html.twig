    <script>


    let eventos = {{eventos|json_encode|raw}};

    for (const evento of eventos){

      evento.start = evento.start.date.split(" ")[0];

    }

    console.log(eventos);


      document.addEventListener('DOMContentLoaded', function() {
        var calendarEl = document.getElementById('calendar');
        var calendar = new FullCalendar.Calendar(calendarEl, {
          initialView: 'dayGridMonth',
          dateClick: function(info) {
            alert('Ha seleccionado: ' + info.dateStr);
            info.dayEl.style.backgroundColor = 'red';
            $("#exampleModal").modal();
          },
          locale:"Es",
          timeZone: 'Europe/Spain',
          headerToolbar:{
            left:'prev,next, today',
            center:'title',
            right:'dayGridMonth,timeGridWeek,timeGridDay'
          },
              events: eventos,
              editable: true,
              eventResizableFromStart: true,

            eventClick:function(callEvent, jsEvent, view){
              $("#tituloEvento").html(callEvent.title);
              $("#descripcionEvento").html(callEvent.descripcion);

              $("#exampleModal").modal();
            }

        })
        calendar.render();
      });
    </script>
